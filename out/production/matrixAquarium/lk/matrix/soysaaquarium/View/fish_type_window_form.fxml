<AnchorPane prefHeight="657.0" prefWidth="1024.0" style="-fx-background-color: #E2E2E2;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.matrix.soysaaquarium.Controller.FishTypeWindowFormController">
    <children>
        <Pane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #D3D3D3;">
            <children>
                <Label fx:id="fishTypeLabel" alignment="CENTER" layoutX="467.0" layoutY="22.0" prefHeight="63.0" prefWidth="347.0" text="Fish Type">
                    <font>
                        <Font name="Arial Bold" size="35.0" />
                    </font>
                </Label>
                <JFXComboBox fx:id="fishSelectComboBox" layoutX="1065.0" layoutY="22.0" onAction="#fishSelectComboBoxOnAction" prefHeight="31.0" prefWidth="192.0" promptText="Select fish type" style="-fx-background-color: white; -fx-background-radius: 10px;" />
                <ImageView fx:id="fishImage" fitHeight="586.0" fitWidth="490.0" layoutX="766.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="availableTanksLabel" layoutX="24.0" layoutY="119.0" prefHeight="31.0" prefWidth="292.0" text="Available in 10 fish tanks.">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                </Label>
                <JFXTextArea fx:id="fishDescriptionText" editable="false" focusColor="#86aaf7" layoutX="356.0" layoutY="167.0" prefHeight="391.0" prefWidth="332.0" text="Fish Description" unFocusColor="#d0d0d0" wrapText="true">
                    <font>
                        <Font size="20.0" />
                    </font>
                </JFXTextArea>
                <TableView fx:id="fishTable" layoutX="24.0" layoutY="167.0" prefHeight="531.0" prefWidth="292.0">
                    <columns>
                        <TableColumn fx:id="tankIdCol" prefWidth="75.0" text="Tank Id" />
                        <TableColumn fx:id="fishQtyCol" prefWidth="75.0" text="Fish Qty" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </Pane>
        <JFXButton fx:id="goBackBtn" layoutX="24.0" layoutY="24.0" onAction="#goBackBtnOnAction" prefHeight="48.0" prefWidth="113.0" style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #36D1DC , #5B86E5); -fx-background-radius: 10px;" text="Go Back">
            <effect>
                <DropShadow />
            </effect>
        </JFXButton>
    </children>
</AnchorPane>
